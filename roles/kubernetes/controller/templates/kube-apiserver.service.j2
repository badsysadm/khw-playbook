[Unit]
Description=Kubernetes API Server
Documentation=https://github.com/kubernetes/kubernetes

[Service]
ExecStart=/usr/local/bin/kube-apiserver \
  --advertise-address={{ INTERNAL_IP }} \
  --allow-privileged=true \
  --apiserver-count=10 \
  --audit-log-maxage=30 \
  --audit-log-maxbackup=3 \
  --audit-log-maxsize=100 \
  --audit-log-path=/var/log/audit.log \
  --authorization-mode=Node,RBAC \
  --bind-address=0.0.0.0 \
  --client-ca-file={{ ADM_CA  }}/ca.pem \
  --enable-admission-plugins=Initializers,NamespaceLifecycle,NodeRestriction,LimitRanger,ServiceAccount,DefaultStorageClass,ResourceQuota \
  --enable-swagger-ui=false \
  --etcd-cafile={{ ADM_CA }}/ca.pem \
  --etcd-certfile={{ ADM_KEY  }}/kube-api-{{ inventory_hostname  }}.pem \
  --etcd-keyfile={{ ADM_KEY  }}/kube-api-{{ inventory_hostname  }}-key.pem \
  --etcd-servers=https://127.0.0.1:2379 \
  --event-ttl=1h \
  --kubelet-certificate-authority={{ ADM_CA }}/ca.pem \
  --kubelet-client-certificate={{ ADM_KEY  }}/kube-api-{{ inventory_hostname  }}.pem \
  --kubelet-client-key={{ ADM_KEY  }}/kube-api-{{ inventory_hostname  }}-key.pem \
  --kubelet-https=true \
  --runtime-config=api/all \
  --service-account-key-file={{ ADM_KEY  }}/kube-service-account.pem \
  --service-cluster-ip-range={{ SVC_NET  }}/24 \
  --service-node-port-range=30000-32767 \
  --tls-cert-file={{ ADM_KEY  }}/kube-api-{{ inventory_hostname  }}.pem \
  --tls-private-key-file={{ ADM_KEY  }}/kube-api-{{ inventory_hostname  }}-key.pem \
  --v=2
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
